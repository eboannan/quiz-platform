// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  passwordHint String?
  name         String?
  createdAt    DateTime @default(now())
  
  quizzes   Quiz[]
  students  Student[]
}


model Student {
  id         String   @id @default(uuid())
  firstName  String
  lastName   String?
  username   String   @unique
  password   String
  age        Int?
  grade      String?
  teacherId  String
  createdAt  DateTime @default(now())

  teacher     User         @relation(fields: [teacherId], references: [id])
  attempts    Attempt[]
  assignments Assignment[]
  createdQuizzes Quiz[]    @relation("StudentCreatedQuizzes")
}

model Quiz {
  id        String   @id @default(uuid())
  title     String
  teacherId String?
  studentId String?
  createdAt DateTime @default(now())

  teacher     User?         @relation(fields: [teacherId], references: [id])
  student     Student?      @relation("StudentCreatedQuizzes", fields: [studentId], references: [id])
  questions   Question[]
  assignments Assignment[]
  attempts    Attempt[]
}

model Question {
  id           String @id @default(uuid())
  text         String
  options      String // JSON string of options array: ["A", "B", "C"]
  correctIndex Int
  quizId       String
  image        String? // Base64 or URL

  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model Assignment {
  id        String   @id @default(uuid())
  quizId    String
  studentId String
  assignedAt DateTime @default(now())

  quiz    Quiz    @relation(fields: [quizId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([quizId, studentId]) // Prevent duplicate assignments
}

model Attempt {
  id        String   @id @default(uuid())
  score     Int
  total     Int
  date      DateTime @default(now())
  studentId String
  quizId    String
  answers   String?

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  quiz    Quiz    @relation(fields: [quizId], references: [id], onDelete: Cascade)
}
